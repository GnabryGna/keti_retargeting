<mujoco model="scene">
  <option timestep="0.001" integrator="implicitfast" cone="elliptic">
    <flag multiccd="enable"/>
  </option>

  <compiler autolimits="true" angle="radian"/>

  <statistic extent="1.1" center="0 0 0.1"/>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture name="groundplane" type="2d" builtin="checker" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" mark="edge" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texrepeat="5 5" texuniform="true" reflectance="0.2"/>
  </asset>

  <worldbody>
    <geom name="floor" type="plane" size="0 0 0.05" material="groundplane" pos="0 0 -0.75"/>
    <light type="directional" pos="0 0 2" dir="0 0 -1"/>
  </worldbody>

  <visual>
    <global azimuth="-90" elevation="-30" offwidth="1920" offheight="1080"/>
    <quality shadowsize="16384"/>
    <headlight diffuse="0.6 0.6 0.6" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
  </visual>
</mujoco>
